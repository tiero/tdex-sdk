{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "browser": "dist-web/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "dist-web"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "yarn build-web && yarn build-node",
    "build-node": "tsdx build --tsconfig tsconfig.json --entry src/index.ts ",
    "build-web": "tsdx build --tsconfig tsconfig.web.json --entry src/index.web.ts && rm -rf dist-web && mv dist dist-web",
    "test": "tsdx test",
    "lint": "tsdx lint src test",
    "prepare": "tsdx build"
  },
  "peerDependencies": {},
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "tdex-sdk",
  "contributors": [
    {
      "name": "Marco Argentieri",
      "email": "marco@vulpem.com",
      "url": "https://vulpem.com"
    },
    {
      "name": "Pietralberto Mazza",
      "email": "pietro@vulpem.com",
      "url": "https://vulpem.com"
    }
  ],
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "husky": "^4.2.3",
    "ts-protoc-gen": "^0.12.0",
    "tsdx": "^0.13.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.0.4",
    "@types/google-protobuf": "^3.7.2",
    "axios": "^0.19.2",
    "google-protobuf": "^3.11.4",
    "jsbi": "^3.1.2",
    "liquidjs-lib": "vulpemventures/liquidjs-lib",
    "tdex-protobuf": "tdex-network/tdex-protobuf#beta",
    "tslib": "^2.0.0"
  }
}